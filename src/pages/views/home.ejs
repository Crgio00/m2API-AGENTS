<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>API de Agentes de Valorant</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-900 text-white">
    <header class="bg-gray-800 py-4">
      <div class="container mx-auto flex justify-between items-center">
        <h1 class="text-3xl font-bold">API de Agentes de Valorant</h1>
        <nav>
          <a href="#features" class="text-gray-400 hover:text-white mx-2"
            >Características</a
          >
          <a href="#agents" class="text-gray-400 hover:text-white mx-2"
            >Agentes</a
          >
          <a href="#cta" class="text-gray-400 hover:text-white mx-2"
            >Registro</a
          >
        </nav>
      </div>
    </header>
    <section id="agents" class="container mx-auto px-4 py-16">
      <h3 class="text-3xl font-bold text-center mb-8">DEMO Datos de Agentes</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Example card -->
        <div class="bg-gray-800 p-6 rounded-lg">
          <img
            src="https://via.placeholder.com/150"
            alt="Agente 1"
            class="w-full h-48 object-cover mb-4 rounded-lg"
          />
          <h4 class="text-2xl font-bold mb-2">Agente 1</h4>
          <p class="text-gray-400">
            Descripción del agente 1. Información sobre habilidades, roles, etc.
          </p>
        </div>
        <!-- Loop for generating 20 cards -->
        <script>
          for (let i = 2; i <= 20; i++) {
            document.write(`
                        <div class="bg-gray-800 p-6 rounded-lg">
                            <img src="https://via.placeholder.com/150" alt="Agente ${i}" class="w-full h-48 object-cover mb-4 rounded-lg">
                            <h4 class="text-2xl font-bold mb-2">Agente ${i}</h4>
                            <p class="text-gray-400">Descripción del agente ${i}. Información sobre habilidades, roles, etc.</p>
                        </div>
                    `);
          }
        </script>
      </div>
    </section>
  </body>
</html>
